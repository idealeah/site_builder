		title= title + " | Comp Form"

	body.comp-form(class= debug?"debug":"")
		
		#logo
			a(href="/")
				include ./_logo.svg
				
		if header_title
			header#top-nav.container
				.row.justify-content-md-center
					.col-md-8
						span.title
							!= header_title
						.buttons
							if previous
								a.previous(href=previous_url)
									i.fa.fa-caret-left.fa-lg
									!= previous

							if next
								a.next(href=next_url)
									!= next
									i.fa.fa-caret-right.fa-lg
		#content
			if hero_title
				#hero.container
					.row.justify-content-md-center
						.col-md-8
							h1= hero_title
							h6 Overview
							p.description !{description}
							h6 Tools
							p.software #{software}
				
			#copy.container
				.row.justify-content-md-center
					.col-md-8.comp-form-copy
						!=contents
			
			#scroll-out.container
		
		
		
